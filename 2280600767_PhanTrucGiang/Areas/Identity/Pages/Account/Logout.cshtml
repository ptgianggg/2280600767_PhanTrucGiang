@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card shadow-lg p-4 text-center" style="width: 400px;">
        <h2 class="mb-4">@ViewData["Title"]</h2>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger w-100">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    </div>
</div>