@model _2280600767_PhanTrucGiang.Models.MonAn

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Chi Tiết Món Ăn</h2>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <div class="text-center mb-3">
                    <img src="@Model.HinhAnh" class="img-fluid rounded shadow"
                         style="max-width: 400px; max-height: 300px; object-fit: cover;"
                         alt="Hình ảnh món ăn">
                </div>
            }
            else
            {
                <div class="text-center mb-3">
                    <p class="text-muted fst-italic">Không có hình ảnh</p>
                </div>
            }

            <h4 class="card-title">@Model.TenMonAn</h4>
            <p class="card-text"><strong>Giá:</strong> @Model.Dongia VNĐ</p>
            <p class="card-text"><strong>Loại món ăn:</strong> @Model.LoaiMonAn.TenLoaiMonAn</p>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại
            </a>
        </div>
    </div>
</div>
