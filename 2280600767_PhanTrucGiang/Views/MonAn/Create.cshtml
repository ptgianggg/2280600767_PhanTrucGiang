@model _2280600767_PhanTrucGiang.Models.MonAn

@{
    ViewData["Title"] = "Thêm Món Ăn";
}

<div class="container mt-4">
    <h2 class="text-center text-success">Thêm Món Ăn Mới</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="shadow p-4 bg-light rounded">
        <div class="mb-3">
            <label asp-for="MaMonAn" class="form-label">Mã Món Ăn</label>
            <input asp-for="MaMonAn" class="form-control" placeholder="Nhập mã món ăn..." />
            <span asp-validation-for="MaMonAn" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TenMonAn" class="form-label">Tên Món Ăn</label>
            <input asp-for="TenMonAn" class="form-control" placeholder="Nhập tên món ăn..." />
            <span asp-validation-for="TenMonAn" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MaLoaiMonAn" class="form-label">Loại Món Ăn</label>
            <select asp-for="MaLoaiMonAn" class="form-control" asp-items="ViewBag.MaLoaiMonAn"></select>
        </div>

        <div class="mb-3">
            <label asp-for="Dongia" class="form-label">Đơn Giá</label>
            <input asp-for="Dongia" class="form-control" type="number" placeholder="Nhập giá..." />
            <span asp-validation-for="Dongia" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Soluongton" class="form-label">Số Lượng Tồn</label>
            <input asp-for="Soluongton" class="form-control" type="number" placeholder="Nhập số lượng..." />
            <span asp-validation-for="Soluongton" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Hình Ảnh</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Thêm Món Ăn</button>
            <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
        </div>
    </form>
</div>
