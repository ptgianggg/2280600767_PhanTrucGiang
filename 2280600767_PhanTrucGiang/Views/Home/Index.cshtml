@model IEnumerable<_2280600767_PhanTrucGiang.Models.MonAn>

@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}

<!-- Thông báo thêm vào giỏ hàng -->
<div id="cart-alert" class="alert alert-success position-fixed top-0 end-0 m-3 d-none" style="z-index: 1050;">
</div>

<section class="py-4">
    <div class="container">
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-0 rounded h-100">
                        <img src="@item.HinhAnh" class="card-img-top" alt="@item.TenMonAn" style="height: 250px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@item.TenMonAn</h5>
                            <p class="text-muted mb-2">💰 @item.Dongia.ToString("#,##0 ₫")</p>
                            <p class="text-danger mb-2">
                                🛒 Số lượng tồn: <span class="fw-bold">@item.Soluongton</span>
                            </p>

                            @if (item.Soluongton > 0)
                            {
                                <button class="btn btn-success add-to-cart"
                                        data-productid="@item.MaMonAn"
                                        data-quantity="@numOfQuantity">
                                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-secondary" disabled>
                                    <i class="bi bi-x-circle"></i> Hết hàng
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/cart.js"></script>
}
